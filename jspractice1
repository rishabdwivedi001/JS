<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Live Character Counter</title>
  <style>
    body { font-family: system-ui, Arial, sans-serif; margin: 24px; }
    .card { border: 2px solid #ccc; border-radius: 6px; padding: 16px; max-width: 720px; }
    .label { font-weight: 700; font-size: 1.25rem; margin-bottom: 10px; }
    textarea {
      width: 100%; min-height: 140px; padding: 10px; resize: vertical;
      border: 1.5px solid #bbb; border-radius: 4px; font-size: 1rem;
    }
    .counter { margin-top: 8px; font-weight: 600; color: #333; }
    .muted { color: #666; font-weight: 500; }
  </style>
</head>
<body>
  <div class="card">
    <div class="label">Live Character Counter</div>
    <textarea id="message" placeholder="Start typing..."></textarea>
    <div class="counter">
      Characters: <span id="charCount">0</span>
    </div>
  </div>

  <script>
    const textarea = document.getElementById('message');
    const countEl = document.getElementById('charCount');

    // Optional: set a default value to demonstrate the counter
    // textarea.value = 'Hello from ByteXL';

    // Count function (handles all input types, including paste/delete)
    function updateCount() {
      // Using Array.from to count Unicode code points more accurately
      const length = Array.from(textarea.value).length;
      countEl.textContent = length;
    }

    // Update on first paint and on every input
    updateCount();
    textarea.addEventListener('input', updateCount);

    // Optional: if you enable default text above, call updateCount once more
    // updateCount();
  </script>
</body>
</html>
